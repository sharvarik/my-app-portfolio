<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    android:weightSum="1"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:layout_weight="0.09"
        android:text="@string/title"
        android:textSize="24sp" />

    <Button
        android:id="@+id/button"
        android:layout_width="197dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp"
        android:layout_weight="0.04"
        android:background="#F08C35"
        android:onClick="sendMessage"
        android:tag="Spotify streamer"
        android:text="SPOTIFY STREAMER"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/button2"
        android:layout_width="197dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp"
        android:layout_weight="0.04"
        android:background="#F08C35"
        android:onClick="sendMessage"
        android:tag="Football scores app"
        android:text="FOOTBALL SCORES APP"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/button3"
        android:layout_width="197dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp"
        android:layout_weight="0.04"
        android:background="#F08C35"
        android:onClick="sendMessage"
        android:tag="Library app"
        android:text="LIBRARY APP"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/button4"
        android:layout_width="197dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp"
        android:layout_weight="0.04"
        android:background="#F08C35"
        android:onClick="sendMessage"
        android:tag="Build it bigger"
        android:text="BUILD IT BIGGER"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/button5"
        android:layout_width="197dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp"
        android:layout_weight="0.04"
        android:background="#F08C35"
        android:onClick="sendMessage"
        android:tag="XYZ reader"
        android:text="XYZ READER"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/button6"
        android:layout_width="197dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.04"
        android:background="#006064"
        android:onClick="sendMessage"
        android:tag="my capstone app"
        android:text="CAPSTONE:MY OWN APP"
        android:textColor="@android:color/white" />
</LinearLayout>
